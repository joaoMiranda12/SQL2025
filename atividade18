CREATE DATABASE loja;
USE loja;

CREATE TABLE armazem (
	cod_prod_ID INT PRIMARY KEY,
	valor_unit DECIMAL(10,2) NOT NULL,
    quantidade INT NOT NULL,
    desconto INT 
	);
    
    SELECT * FROM armazem;
